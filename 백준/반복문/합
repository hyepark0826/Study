//문제 : n이 주어졌을 때, 1부터 n까지 합을 구하는 프로그램을 작성하시오.

import java.util.Scanner;

public class Main{
    
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        
        int a = in.nextInt();
        in.close();
        int sum = 0;
        
        for(int i = 1; i <= a; i++){
            sum+=i;
        }
        System.out.println(sum);
    }
}
